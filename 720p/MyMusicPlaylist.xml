<?xml version="1.0" encoding="UTF-8"?>
<window  id="500">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
  <backgroundcolor>0</backgroundcolor>
	<views>50,51,56,560,57</views>
	<controls>
		<include>BackgroundItems</include>
		<include>MusicPlaylistViews</include>
		<include>CommonItems</include>
		
    <!-- ==================== -->
    <!-- Top Options Controls -->
    <!-- ==================== -->
	  <control type="group"  id="9000">
			<left>45</left>
			<top>-10</top>
      <include>TopOptionsSlideAnimations</include>
		  <visible allowhiddenfocus="true">ControlGroup(9111).HasFocus + !Window.IsActive(ContextMenu) + !Window.IsActive(ShutdownMenu) + !Window.IsActive(favourites)</visible>
			<!-- Head Labels -->
			<control type="grouplist">
				<left>0</left>
				<top>0</top>
				<height>70</height>
				<width>1000</width>
				<align>left</align>
				<aligny>center</aligny>
				<itemgap>20</itemgap>
				<orientation>horizontal</orientation>
				<control type="label">
				  <include>TopBigLabel</include>
					<label>$LOCALIZE[33063] $LOCALIZE[33061]</label>
				</control>
				<control type="label">
				  <include>TopZoomedSmallLabel</include>
			    <label>$LOCALIZE[2]</label>
				</control>
			</control>
      <!-- Main Options -->
			<control type="grouplist" id="9111">
  			<left>0</left>
  			<top>50</top>
  			<width>460</width>
  			<height max="520">auto</height>
  			<itemgap>0</itemgap>
  			<onleft>50</onleft>
  			<onright>50</onright>
  			<onup>9111</onup>
  			<ondown>9111</ondown>
  			<onback>50</onback>
			  <visible>!Skin.HasSetting(EnableKioskMode)</visible>
				<control type="button" id="2">
					<description>View as</description>
				  <label>-</label>
				  <include>TopLeftMenusButton</include>
				</control>
				<control type="button" id="3">
					<description>Short</description>
					<label>-</label>
				  <include>TopLeftMenusButton</include>
				</control>
				<control type="togglebutton" id="20">
					<description>Shuffle</description>
	        <label>$LOCALIZE[191]: $LOCALIZE[31012]</label>
	        <altlabel>$LOCALIZE[191]: $LOCALIZE[31011]</altlabel>
				  <include>TopLeftMenusButton</include>
				</control>
				<control type="button" id="26">
					<description>Repeat</description>
					<label>-</label>
				  <include>TopLeftMenusButton</include>
				</control>
				<control type="button" id="21">
					<description>Save</description>
					<label>190</label>
				  <include>TopLeftMenusButton</include>
				</control>
				<control type="button" id="22">
					<description>Clear</description>
					<label>192</label>
				  <include>TopLeftMenusButton</include>
				</control>
			</control>
	  </control>

    <!-- ================ -->
    <!-- Top Content Info -->
    <!-- ================ -->
	  <control type="group">
			<left>45</left>
			<top>25</top>
		  <include>CommonSlideAnimations</include>
			<include>ShutdownMenuAnimation</include>
			<visible>!ControlGroup(9000).HasFocus + !Window.IsActive(MusicInformation) + !Window.IsActive(SongInformation)</visible>
			<control type="grouplist">
				<left>0</left>
				<top>0</top>
			  <height>70</height>
				<width>1000</width>
				<align>left</align>
				<itemgap>12</itemgap>
				<orientation>horizontal</orientation>
		    <include>CommonSlideAnimations</include>	
				<control type="label">
				  <include>TopBigLabel</include>
					<label>$LOCALIZE[2] $LOCALIZE[559]</label>
				</control>
				<control type="label">
				  <include>TopZoomedSmallLabel</include>
			    <label>$INFO[Container.FolderName]</label>
				</control>
			</control>
	  </control>

		<include>CommonWeatherAndClock</include>
	</controls>
</window>
