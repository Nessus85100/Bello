<?xml version="1.0" encoding="UTF-8"?>
<window>
	<allowoverlay>no</allowoverlay>
	<controls>

	  <control type="group">
		  <visible>Window.IsActive(Visualisation) + Player.HasAudio + !Window.IsActive(ShutdownMenu)</visible>
			<visible>Control.IsVisible(110)</visible>
			<animation effect="fade" start="0" end="100" delay="300" time="200">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
			<animation effect="fade" start="0" end="100" delay="300" time="200">Visible</animation>
			<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
			<control type="label">
			  <description>No lyrics found</description>
			  <top>340</top>
				<width>1280</width>
				<label>$ADDON[script.cu.lrclyrics 32001]</label>
				<font>FontSize_50</font>
				<textcolor>white</textcolor>
				<shadowcolor>99000000</shadowcolor>
				<align>center</align>
				<scroll>true</scroll>
				<scrollspeed>20</scrollspeed>
				<visible>!Control.HasFocus(110)</visible>
			</control>

		  <!-- ** Required ** Do not change <id> or <type> -->
      <control type="list" id="110">
				<animation effect="slide" start="0,0" end="0,-120" time="350" condition="![Window.IsActive(MusicOSD) | Player.Paused | Player.Forwarding | Player.Rewinding | Player.ShowInfo]">Conditional</animation>
				<left>0</left>
				<top>230</top>
				<width>1280</width>
				<height>490</height>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<onup>110</onup>
				<ondown>110</ondown>
				<pagecontrol>-</pagecontrol>
			  <scrolltime tween="cubic" easing="out">500</scrolltime>
				<itemlayout height="54">
					<control type="label">
						<left>0</left>
						<top>0</top>
						<width>1280</width>
						<height>42</height>
				    <font>FontSize_44</font>
						<aligny>center</aligny>
						<align>center</align>
				    <textcolor>77white</textcolor>
				    <shadowcolor>99000000</shadowcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="54">
					<control type="label">
						<left>0</left>
						<top>0</top>
						<width>1280</width>
						<height>42</height>
				    <font>FontSize_44</font>
						<aligny>center</aligny>
						<align>center</align>
				    <textcolor>77white</textcolor>
				    <shadowcolor>99000000</shadowcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>!Control.HasFocus(110)</visible>
					</control>
					<control type="label">
						<left>0</left>
						<top>0</top>
						<width>1280</width>
						<height>42</height>
				    <font>FontSize_44</font>
						<aligny>center</aligny>
						<align>center</align>
				    <textcolor>selected</textcolor>
				    <shadowcolor>99000000</shadowcolor>
						<label fallback="--">$INFO[ListItem.Label]</label>
						<visible>Control.HasFocus(110)</visible>
					</control>
				</focusedlayout>
      </control>
	  </control>

		<!-- ** Required ** Do not change <id> or <type> -->
		<control type="spincontrol" id="111">
			<visible>false</visible>
		</control>
		<control type="list" id="120">
			<visible>false</visible>
		</control>
		<control type="spincontrol" id="121">
			<visible>false</visible>
		</control>
		<control type="label" id="200">
			<description>Scraper label</description>
			<visible>false</visible>
		</control>
	</controls>
</window>